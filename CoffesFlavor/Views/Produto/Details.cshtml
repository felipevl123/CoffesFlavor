@model Produto

<div class="container">
    <div class="row">
        <div class="card" style="background-color:#F2E4DC">
            <br/>

            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="" />
            </div>

            <br />

            <div class="card-block">


                <h2 class="card-title">@Model.Nome</h2>
                <h2 class="card-title">R$ @Model.Preco</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>

                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Produto"
                       asp-action="List" class="btn btn-outline-dark" style="background-color:#D9BBA0">Ver todos os produtos</a>

                    
                    <a class="btn btn-outline-dark" id="cartButton" style="background-color:#8C593B"
                       asp-controller="CarrinhoCompra" 
                    asp-action="AdicionarItemNoCarrinhoCompra" 
                    asp-route-produtoId="@Model.ProdutoId">
                    Adicionar @Model.Nome ao carrinho
                    </a>

                    <a class="btn btn-outline-dark" style="background-color:#D9BF50"
                       asp-controller="Favorito"
                       asp-action="AdicionarItemAosFavoritos"
                       asp-route-produtoId="@Model.ProdutoId">
                        Adicionar @Model.Nome aos favoritos &#10024
                    </a>

                    <a class="btn btn-outline-light" style="background-color:#700000"
                       asp-controller="Favorito"
                       asp-action="RemoverItemDosFavoritos"
                       asp-route-produtoId="@Model.ProdutoId">
                        Remover @Model.Nome dos favoritos &#10060
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>