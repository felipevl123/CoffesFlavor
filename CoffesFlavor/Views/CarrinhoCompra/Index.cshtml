@model CarrinhoCompraViewModel

<div class="Container">
<div class="row">
    

    <div>
        <h4>Seu carrinho de compras: </h4>
    </div>

    <table class="table table-bordered table-striped">

        <thead>
            <th>
                <th>Quantidade</th>
                <th>Produto</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
            </th>
        </thead>

        <tbody>
                @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Produto.Nome</td>
                        <td class="text-right">@item.Produto.Preco.ToString("c")</td>
                        <td class="text-right">
                            @((item.Quantidade * item.Produto.Preco).ToString("c"))
                        </td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" 
                            asp-action="RemoverItemNoCarrinhoCompra"
                            asp-route-produtoId="@item.Produto.ProdutoId">
                            <img src="~/images/delete.png"/>
                            </a>
                        </td>
                    </tr>
                }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
            </tr>
        </tfoot>

    </table>

    <div class="text-right">
        <div class="btn-group">
            <a class="btn btn-success" 
            asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            &nbsp;&nbsp;&&nbsp;

            <a class="btn btn-primary" 
            asp-controller="Produto" asp-action="List">Continuar Comprando</a>
        </div>

    </div>

</div>
</div>