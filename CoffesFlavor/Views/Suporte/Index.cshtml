@model FormularioHelperViewModel

<table class="table">
    <tr>
        <td></td>
        <td>
            <div class="row">
                <div class="col-10 col-md-10 col-lg-10">
                    <h4>Solicitação de Suporte</h4>        
                    <form asp-controller="Suporte"
                          asp-action="Index" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.NumeroDoPedido" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="@Model.NumeroDoPedido" class="form-control" />
                                <span asp-validation-for="@Model.NumeroDoPedido" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Descricao" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <textarea asp-for="@Model.Descricao" 
                                class="form-control" maxlenght="400">Digite a solicitação</textarea>
                                <span asp-validation-for="@Model.Descricao" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-8">
                                <input type="submit" class="btn btn-success" value="Enviar" />
                            </div>
                        </div>
                    </form>

                    <p>
                        Quer voltar para sua lista de pedidos? <a asp-action="Index" 
                        asp-controller="PedidosHistorico">Clique aqui</a>
                    </p>
                </div>
            </div>
        </td>
    </tr>
</table>