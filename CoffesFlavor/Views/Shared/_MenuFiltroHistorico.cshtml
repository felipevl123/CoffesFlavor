@*Depois verificar se consigo alinhar os menus de filtro ao centro*@

<div class="container">
    <div class="row align-content-center">
        <div class="col-lg-4">
            <form method="get" asp-action="FiltrarPorNumero" class="form-inline">
                <fieldset>
                    <legend><b>Numero Protocolo</b></legend>
                    <div class="form-group">
                        <label for="filter" class="col-lg-6 control-label">N#</label>
                        <div class="col-lg-6">
                            <input name="filter" class="form-control" placeholder="Ex: '100''" />
                        </div>
                    </div>
                    <div class="form-group">
                        <br />
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-lg-4">
            <form class="form-horizontal" asp-action="FiltrarPorData">
                <fieldset>
                    <legend><b>Data do Pedido</b></legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-6 control-label">Data Inicial</label>
                        <div class="col-lg-6">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-6 control-label">Data Final</label>
                        <div class="col-lg-6">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Procurar</button>
                        </div>
                    </div>
                    <br />
                </fieldset>
            </form>
        </div>
        <div class="col-lg-4">
            <form method="get" asp-action="FiltrarPorPreco" class="form-inline">
                <fieldset>
                    <legend><b>Preço Pedido</b></legend>
                    <div class="form-group">
                        <label for="filter" class="col-lg-6 control-label">Até R$ xx.xx</label>
                        <div class="col-lg-6">
                            <input name="filter" class="form-control" placeholder="00.00" />
                        </div>
                    </div>
                    <div class="form-group">
                        <br />
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>