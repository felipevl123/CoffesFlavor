@model Produto

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="" width="250" height="150" ></p>

    <h4>
    <a asp-controller="Produto" 
    asp-action="Details" 
    asp-route-produtoId="@Model.ProdutoId">@Model.Nome</a>
    </h4>

    <h3>Preço: @Model.Preco.ToString("c")</h3>



    @*<p>@Model.DescricaoCurta</p>*@
    <br/>

    <div>
        <p class="button">
            <a class="btn btn-outline-light" id="cardButton" style="background-color:#8C593B"
            asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-ProdutoId="@Model.ProdutoId">
            Incluir no Carrinho
            </a>
        </p>

    </div>
</div>