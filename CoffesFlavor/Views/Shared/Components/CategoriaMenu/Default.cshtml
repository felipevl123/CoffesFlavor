<div class="dropdown">
    <a class="btn btn-outline-dark dropdown-toggle"
       href="#" role="button" id="dropdownMenuLink"
       data-bs-toggle="dropdown" aria-expanded="false" style="background-color:#D9BBA0">
        Cardápio
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        @foreach(var categoria in Model)
        {
            <li>
                <a class="dropdown-item" 
                asp-controller="Produto" 
                asp-action="List" style="color:black" 
                asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome
                </a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" 
            asp-controller="Produto" 
            asp-action="List" 
            asp-route-categoria=""
            style="color:black">Todos os Produtos</a>
        </li>
    </ul>
</div>