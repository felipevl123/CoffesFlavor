<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffesFlavor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffesFlavor.styles.css" asp-append-version="true" />
</head>
<body style="background-color:#F2E4DC">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light " style="background-color:#8C593B;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo empresa sem fundo.png" width="200"  height="100"/>
                    Home Coffee Express
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @await Html.PartialAsync("_LoginPartial")
                    @await Html.PartialAsync("_ContaDetalhesPartial")
                    
                    
                    @*@<a class="nav-link text-light" asp-area="" asp-controller="Produto" asp-action="List">Produtos</a>*@
                    @* <form class="navbar-form navbar-right" 
                    asp-controller="Produto" asp-action="Search" method="get">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Procurar produto"
                                   name="searchString" value="@ViewData["searchString"]" />
                        </div>
                    </form> *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link text-dark" 
                        asp-area="Admin" 
                        asp-controller="Admin" 
                        asp-action="Index">Admin</a>
                    }
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#D9BBA0;">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @await Component.InvokeAsync("CategoriaMenu")
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse justify-content-center">
                    @await Component.InvokeAsync("CarrinhoCompraResumo")
                    @await Html.PartialAsync("_FavoritosPartial")
                    @await Html.PartialAsync("_HistoricoPartial")
                    <a class="nav-link text-dark" asp-area=""
                       asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CoffesFlavor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    
    <footer>
        <partial name="_Footer" />
    </footer>
    
    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
