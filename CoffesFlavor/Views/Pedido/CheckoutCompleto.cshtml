@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Nome</strong></p>
            <p>Data do Pedido : <strong>@Model.PedidoEnviado</strong></p>
            <p>Numero do Pedido : <strong>@Model.PedidoId</strong></p>
            <p>Metodo de pagamento : <strong>@Model.OpcaoPagamento</strong></p>


            <table class="table table-bordered table-striped">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th>Preço</th>
                </tr>
                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Produto.ImagemUrl" width="40"/></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Produto.Nome</td>
                        <td>@item.Produto.Preco</td>
                    </tr>
                }
            </table>

            <br/>
            @if(ViewBag.ValorDescontado != null)
            {
                <h4>
                    Valor do desconto: 
                    <strong>@(((decimal)ViewBag.ValorDescontado).ToString("C2"))</strong>
                </h4>
            }
            

            <h4>Valor total do Pedido: 
                <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>

    <div class="form-group" style="text-align :center">
        <h3>
            <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
        </h3>
    </div>
</div>